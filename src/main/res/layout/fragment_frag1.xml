<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag1"
    android:background="#f1f1e3">




    <TextView
        android:layout_width="372dp"
        android:layout_height="39dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="QUESTION 2 -"
        android:id="@+id/textView6"
        android:layout_gravity="left|top" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="219dp"
        android:layout_gravity="center"
        android:id="@+id/rad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/radioButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/radioButton5">

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/rad"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="1/2"
        android:id="@+id/radioButton4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp"
        android:checked="false" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="2/3"
        android:id="@+id/radioButton6"
        android:layout_above="@+id/radioButton4"
        android:layout_toEndOf="@+id/button3"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="4/3"
        android:id="@+id/radioButton5"
        android:checked="false"
        android:layout_above="@+id/radioButton6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What is the ratio 0f 40/30?"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />


</RelativeLayout>
